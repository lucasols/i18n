{
  "name": "@ls-stack/i18n-monorepo",
  "private": true,
  "description": "Super simple i18n library monorepo",
  "version": "0.5.0",
  "license": "MIT",
  "scripts": {
    "test": "pnpm --filter @ls-stack/server-i18n test && pnpm --filter @ls-stack/i18n test",
    "lint": "pnpm tsc && pnpm eslint",
    "tsc": "pnpm -r tsc",
    "eslint": "CI=true eslint core/src/ server/src/ server/tests/ browser/src/ browser/tests/ --color --max-warnings=0",
    "build": "pnpm test && pnpm lint && pnpm build:no-test",
    "build:no-test": "pnpm -r build:no-test",
    "bench": "pnpm --filter @ls-stack/i18n build:no-test && node bench/bench.ts"
  },
  "repository": "https://github.com/lucasols/i18n",
  "author": "Lucas Santos",
  "type": "module",
  "engines": {
    "node": ">=21.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@ls-stack/extended-lint": "^0.83.0",
    "@ls-stack/utils": "catalog:",
    "@types/eslint": "^9.6.1",
    "@types/node": "catalog:",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/eslint-plugin": "^1.6.6",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-plugin-unicorn": "^62.0.0",
    "happy-dom": "^20.5.0",
    "prettier": "3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "tsdown": "^0.20.1",
    "tsx": "^4.21.0",
    "typescript": "catalog:",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
