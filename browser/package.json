{
  "name": "@ls-stack/i18n",
  "description": "Super simple browser i18n library with React support",
  "version": "1.0.4",
  "license": "MIT",
  "scripts": {
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "tsc": "tsc -p tsconfig.prod.json",
    "build:no-test": "tsdown",
    "build": "pnpm tsc && pnpm test && pnpm build:no-test",
    "test-cli:check": "pnpm build:no-test && node dist/cli.mjs --default en --config-dir ../cli-test/config --src-dir ../cli-test/src",
    "test-cli:fix": "pnpm test-cli:check --fix",
    "pre-publish": "../scripts/check-if-is-sync.sh && pnpm build"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "ls-stack-i18n": "./dist/cli.mjs"
  },
  "repository": "https://github.com/lucasols/i18n",
  "author": "Lucas Santos",
  "type": "module",
  "main": "./dist/main.mjs",
  "types": "./dist/main.d.mts",
  "exports": {
    ".": {
      "import": "./dist/main.mjs",
      "types": "./dist/main.d.mts"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=21.5.0"
  },
  "dependencies": {
    "@ai-sdk/google": "catalog:",
    "@ai-sdk/openai": "catalog:",
    "@ai-sdk/provider": "catalog:",
    "@ls-stack/utils": "catalog:",
    "ai": "catalog:",
    "readdirp": "catalog:",
    "runcheck": "catalog:",
    "type-flag": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@ls-stack/i18n-core": "workspace:*",
    "@testing-library/react": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "@types/react": "^18.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "typescript": "^5.8.3"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "@types/react": {
      "optional": true
    }
  }
}
